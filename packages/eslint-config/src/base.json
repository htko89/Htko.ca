{
  "extends": ["next", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "prefer-const": "error",
    
    "semi": ["off"],
    "quotes": ["off"],
    "comma-dangle": ["off"],
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 125,

        "importOrder": [
          "^(react|next)(.*)$", 
          "<THIRD_PARTY_MODULES>", 
          "^@(.*)/(.*)$",
          "^[~/]",
          "^[./]"
        ],
        "importOrderSeparation": false,
        "importOrderSortSpecifiers": true
      }
    ]
  }
}
