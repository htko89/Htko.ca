{
  "extends": ["next", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "prefer-const": "error",
    
    "semi": ["off"],
    "quotes": ["off"],
    "comma-dangle": ["off"],
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 125,

        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "import/first": "error",
        "import/newline-after-import": "error",
        "import/no-duplicates": "error"
      }
    ]
  }
}
